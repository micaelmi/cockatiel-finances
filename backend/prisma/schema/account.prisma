model Account {
  id        String   @id @default(uuid())
  name      String
  balance   Decimal  @default(0) @db.Decimal(10, 2)
  color     String
  icon      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
}
